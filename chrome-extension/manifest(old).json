{
    "name": "IBM Dotcom Devtools",
    "version": "1.2.0",
    "manifest_version": 2,
    "description": "Basic tools to aide in the development of IBM.com pages.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": ["static/background/index.js"]
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["static/inject/index.css"],
            "js": ["static/inject/index.js"]
        }
    ],
    "page_action": {
        "default_icon": {
            "16": "media/16x16-light.png",
            "32": "media/32x32-light.png",
            "48": "media/48x48-light.png",
            "128": "media/128x128-light.png"
        },
        "default_popup": "static/popup/index.html"
    }
}